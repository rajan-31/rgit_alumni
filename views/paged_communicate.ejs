</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top header-inner-pages">
        <div class="container d-flex align-items-center">

            <h1 class="align-items-center mr-auto"><a href="#"><img id="main_logo" src="../../../assets/img/logo.png" alt="APSIT" height="100px"></a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo mr-auto"><img src="../../../assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/news">News</a></li>
                    <li><a href="/events">Events</a></li>
                    <li><a href="/contribute">Contribute</a></li>
                    <li class="active"><a href="#communicate">Communicate</a></li>

                    <% if(loggedInUser.role=="admin"){ %>
                        <li><a href="/admin">Admin Panel</a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } else { %>
                        <li class="drop-down"><a href="#"><%= loggedInUser.firstName %> <i class="fas fa-angle-down"></i></a>
                            <ul>
                                <li><a href="/profile"><i class="fas fa-user pr-1"></i>Profile</a></li>
                                <li><a href="/chats"><i class="fas fa-comments pr-1"></i>Chats</a></li>
                                <li><a href="/logout"><i class="fas fa-sign-out-alt pr-1"></i>Logout</a></li>
                            </ul>
                        </li>
                    <% } %>
                </ul>
            </nav><!-- nav-menu -->



        </div>
    </header><!-- End Header -->

    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs"><br><br><br>
            <div class="container">

                <ol>
                    <li><a href="/">Home</a></li>
                    <li>Communicate</li>
                </ol>
                <h2>Communicate</h2>

            </div>
        </section><!-- End Breadcrumbs -->

        <section id="communicate" class="services section-bg">
            <div class="container" data-aos="fade-up">
        
                <div class="section-title">
                    <h2>Alumni</h2>
        
                </div>
        
                <div class="row">
                    <% for(let i=0; i<countAlumni; i++) { %>
                    
                        <div class="col-xl-4 col-md-6 d-flex align-items-stretch mb-3" data-aos="zoom-in" data-aos-delay="100">
                            <div class="icon-box keep-width">
                        
                                <div>
                                    <center>
                                        <% if( alumni[i].profileImage ) { %>
                                            <% if(i<6) { %>
                                                <img src="<%=alumni[i].profileImage%>" width="200" height="200">
                                            <% } else { %>
                                                <img class="lazyload" src="/assets/img/user-placeholder-200x200.png" data-src="<%=alumni[i].profileImage%>" width="200" height="200" onerror="this.onerror=null;this.src='/assets/img/user-placeholder-200x200.png';">
                                            <% } %>
                                        <% } else { %>
                                            <i class="fas fa-user" style="font-size: 200px;"></i>
                                        <% } %>
                                    </center>
                                </div>
                                <hr>
                                <center>
                                    <h4><a href="/profile/<%= alumni[i]._id %> "><%= alumni[i].firstName %> <%= alumni[i].lastName %></a></h4>
                                </center>
                        
                                <br>
                        
                                <% if(alumni[i].profile && alumni[i].profile.bio.length>213){%>
                                    <p><%= alumni[i].profile.bio.slice(0,210)+"..." %></p>
                                <% }else{ %>
                                    <p><%= alumni[i].profile.bio %>
                                        <span class="show-whitespaces"><%="  ".repeat(200-alumni[i].profile.bio.length) %></span>
                                    </p>
                                <% } %>
                        
                                <hr><br>
                        
                                <center>
                                    <div class="row">
                                        <div class="col-md-6"><h4><a href="/profile/<%= alumni[i]._id %> "><i class="fas fa-id-card pr-1"></i>Profile</a></h4></div>
                                        <div class="col-md-6"><h4><a href="/chats/<%= alumni[i]._id %> "><i class="fas fa-paper-plane pr-1"></i>Chat</a></h4></div>
                                    </div>
                                </center>
                        
                            </div>
                        </div>
                    <% }; %>
                </div>

                <div class="d-flex justify-content-end">

                    <form action="/communicate/page/<%= Number(lastPage)+1 %>" method="post">
                        <input type="text" name="lastid" value="<%= lastId %>" hidden="hidden">
                        <button type="submit" class="btn next-btn">More <i class="fas fa-angle-double-right"></i></button>
                    </form>
                </div>
            </div>
        </section>

    </main><!-- End #main -->



    <!-- ======= Footer ======= -->
<footer id="footer">

    <div class="footer-newsletter">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h4>Join Our Newsletter <i class="fas fa-newspaper"></i></h4>
                    <p>To get the latest updates</p>
                    <form id="newsletter-form">
              <input type="email" name="email" id="newsletter-email" placeholder="Enter your email..." required="required">
              <button id="newsletter-submit-btn" type="submit">Subscribe</button>
            </form>
            <div class="small text-center text-warning mt-2 newsletter-invalid-email" style="display: none;"><i class="fas fa-exclamation-circle"></i> Invalid Email Address!</div>
            <div class="small text-center text-danger mt-2 newsletter-request-failed" style="display: none;"><i class="fas fa-exclamation-circle"></i> Request Failed!</div>
            <div class="small text-center text-warning mt-2 newsletter-email-exists" style="display: none;"><i class="fas fa-exclamation-circle"></i> ALready Subscribed!</div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-top">
        <div class="container">
            <div class="row justify-content-around">

                <div class="col-lg-3 col-md-6 footer-contact">
