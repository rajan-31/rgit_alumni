        <section id="portfolio-details" class="portfolio-details">
            <div class="container">

                <div class="portfolio-details-container">

                    <div class="owl-carousel portfolio-details-carousel">
                        <% event.images.forEach(function(item){ %>
                        <img src="data:image/<%=item.contentType%>;base64, <%=item.data.toString('base64')%>">
                        <%})%>

                    </div>

                    <div class="portfolio-info">
                        <h3>Event information</h3>
                        <ul>
                            <!-- <li><strong>Branch</strong>: All</li> -->
                            <li><strong>Date</strong>: <%= event.date.toGMTString().slice(0,16) %></li>
                        </ul>
                    </div>

                </div>
                <div class="portfolio-description">
                    <h4>Edit Event</h4>
                    <div class="form-group">
                        <form action="/events/<%= event._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" name="title" placeholder="Title" class="form-control"
                                    value="<%= event.title %>" >
                                </div>
                                <br>
                                <div class="form-group">
                                    <label>Date: </label>
                                    <!-- safari & internet explorer doesn't support this date picker-->
                                    <input type="date" id="" name="date"
                                        value=<%= event.date.toISOString().slice(0,10) %> min="2010-01-01"
                                        max="2100-12-31">
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea name="desc" class="form-control"
                                        rows="5"><%= event.description %></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="images">Update Image</label>
                                    <input type="file" name="images" class="form-control-file" multiple>
                                </div>
                                <div class="alert alert-warning" role="alert">
                                    <i class="icofont-exclamation-circle"></i>
                                    To change data other than images don't choose any file.
                                </div>
                                <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>

            </div>
        </section><!-- End Portfolio Details Section -->
