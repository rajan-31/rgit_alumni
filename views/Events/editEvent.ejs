    <script>
        $("#selectImages").change(function () {
          if(this.files.length>5) {
          $("#editButton").prop('disabled', true);
        } else {
          $("#editButton").prop('disabled', false);
        }
          $("#selectedImages").html("");
          for (let i = 0; i < this.files.length; i++) {
            let x = "<li>" + this.files[i].name + "</li>";
            $("#selectedImages").append(x);
          }
        });
      </script>
