<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>News | APSIT Alumni</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="../assets/img/favicon.png" rel="icon">
  <link href="../assets/img/logo.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="../assets/vendor/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" crossorigin="anonymous" />
  <link href="../assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
  <link href="../assets/vendor/aos/aos.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">

  <!-- Jquery with fallback -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <script>
     window.jQuery || document.write('<script src="../assets/vendor/jquery.min.js"><\/script>');
  </script>

</head>
<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top header-inner-pages">
    <div class="container d-flex align-items-center">
  
      <h1 class="align-items-center mr-auto"><a href="#"><img id="main_logo" src="assets/img/logo.png" alt="APSIT" height="100px"></a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="../assets/img/logo.png" alt="" class="img-fluid"></a>-->
  
      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="/">Home</a></li>
          <li class="active"><a href="/news">News</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/contribute">Contribute</a></li>
          <li><a href="/communicate">Communicate</a></li>
  
          <% if(loggedInUser.role=="admin"){ %>
            <li><a href="/admin">Admin Panel</a></li>
            <li><a href="/logout">Logout</a></li>
          <% } else { %>
              <li class="drop-down"><a href="#"><%= loggedInUser.firstName %> <i class="fas fa-angle-down"></i></a>
                  <ul>
                      <li><a href="/profile"><i class="fas fa-user pr-1"></i>Profile</a></li>
                      <li><a href="/chats"><i class="fas fa-comments pr-1"></i>Chats</a></li>
                      <li><a href="/logout"><i class="fas fa-sign-out-alt pr-1"></i>Logout</a></li>
                  </ul>
              </li>
          <% } %>
        </ul>
      </nav><!-- .nav-menu -->
  
  
  
    </div>
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs"><br><br><br>
      <div class="container">

        <ol>
          <li><a href="/">Home</a></li>
          <li>News</li>
        </ol>
        <h2>News</h2>

      </div>
    </section><!-- End Breadcrumbs -->

    <section id="news" class="services section-bg">
          <div class="container" data-aos="fade-up">
    
            <div class="section-title">
              <h2>News</h2>
            </div>
            <div  id="original" class="row">
    
              <% let tempDate; 
              const months=['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                  days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
                  for(let i=0; i<countNews; i++) { 
                    tempDate = news[i].date %>
    
                <div  class="col-xl-4 col-md-6 d-flex align-items-stretch mb-3" data-aos="zoom-in" data-aos-delay="100">
                  <div class="icon-box keep-width">
                
                    <div>
                      <center>
                        <% if(i<=5) { %>
                          <img src="<%= news[i].thumbnail %>" width="300" height="200" onerror="this.onerror=null;this.src='/assets/img/image-placeholder-300x200.gif';" />
                        <% } else { %>
                          <img class="lazyload" src="/assets/img/image-placeholder-300x200.gif" data-src="<%= news[i].thumbnail %>" width="300" height="200" onerror="this.onerror=null;this.src='/assets/img/image-placeholder-300x200.gif';" />
                        <% } %>
                      </center>
                    </div>
                    <hr>
                    <center>
                      <h4><a href="/news/<%= news[i]._id %>"><%= news[i].title %></a></h4>
                    </center>
                
                    <center>
                      <i class="far fa-calendar-alt"></i> 
                      <%= `${days[tempDate.getDay()]}, ${("0" + tempDate.getDate()).slice(-2)} ${months[tempDate.getMonth()]} ${tempDate.getFullYear()}` %> 
                    </center>
                    <br>
                
                  <% if(news[i].description && news[i].description.length>213){%>
                    <p><%= news[i].description.slice(0,210)+"..." %></p>
                  <% }else{ %>
                    <p><%= news[i].description %>
                      <span class="show-whitespaces"><%="  ".repeat(200-news[i].description.length) %></span>
                    </p>
                  <% } %>
    
                    <hr><br>
                    <center >
                      <h4 ><a  href="/news/<%= news[i]._id %> "><i class="fas fa-info-circle"></i> More Info</a></h4>
                    </center>
                
                  </div>
                </div>
            <% }; %>
    
            </div>

            <div class="d-flex justify-content-end">

              <form action="/news/page/<%= Number(lastPage)+1 %>" method="post">
                  <input type="text" name="lastdate" value="<%= lastDate %>" hidden="hidden">
                  <input type="text" name="lastid" value="<%= lastId %>" hidden="hidden">
                  <button type="submit" class="btn next-btn">More <i class="fas fa-angle-double-right"></i></button>
              </form>
          </div>
    
          </div>
        </section>
    

  </main><!-- End #main -->


  <%- include ('../partials/footer'); -%>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js" crossorigin="anonymous"></script>

</body>

</html>