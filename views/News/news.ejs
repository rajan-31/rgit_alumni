<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>News | APSIT Alumni</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="../assets/img/favicon.png" rel="icon">
  <link href="../assets/img/logo.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="../assets/vendor/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" crossorigin="anonymous" />
  <link href="../assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
  <link href="../assets/vendor/aos/aos.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">

  <!-- Jquery with fallback -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <script>
     window.jQuery || document.write('<script src="../assets/vendor/jquery.min.js"><\/script>');
  </script>

</head>
<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top header-inner-pages">
    <div class="container d-flex align-items-center">
  
      <h1 class="align-items-center mr-auto"><a href="#"><img id="main_logo" src="assets/img/logo.png" alt="APSIT" height="100px"></a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="../assets/img/logo.png" alt="" class="img-fluid"></a>-->
  
      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="/">Home</a></li>
          <li class="active"><a href="#news">News</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/contribute">Contribute</a></li>
          <li><a href="/communicate">Communicate</a></li>
  
          <% if(!loggedInUser){ %>
          <li><a href="/signup">Sign UP</a></li>
          <li><a href="/login">Login</a></li>
          <% } else if(loggedInUser.role=="admin"){ %>
          <li><a href="/admin">Admin Panel</a></li>
          <li><a href="/logout">Logout</a></li>
          <% } else { %>
          <li class="drop-down"><a href="#"><%= loggedInUser.firstName || loggedInUser.username %> <i class="fas fa-angle-down"></i></a>
            <ul>
              <li><a href="/profile"><i class="fas fa-user pr-1"></i>Profile</a></li>
              <li><a href="/logout"><i class="fas fa-sign-out-alt pr-1"></i>Logout</a></li>
            </ul>
          </li>
          <% } %>
        </ul>
      </nav><!-- .nav-menu -->
  
  
  
    </div>
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs"><br><br><br>
      <div class="container">

        <ol>
          <li><a href="/">Home</a></li>
          <li>News</li>
        </ol>
        <h2>News</h2>

      </div>
    </section><!-- End Breadcrumbs -->

    <section id="news" class="services section-bg">
          <div class="container" data-aos="fade-up">
    
            <div class="section-title">
              <h2>News</h2>
            </div>
            <div  id="original" class="row">
    
              <% news.forEach(function(item){ %>
    
                <div  class="col-xl-4 col-md-6 d-flex align-items-stretch mb-3" data-aos="zoom-in" data-aos-delay="100">
                  <div class="icon-box">
                
                    <div>
                      <center><img style="border-radius: 20px" src="data:image/<%=item.images[0].contentType%>;base64, 
                      <%=item.images[0].data.toString('base64')%>" width="300" height="200"></center>
                    </div>
                    <hr>
                    <center>
                      <h4><a href="/news/<%= item._id %>"><%= item.title %></a></h4>
                    </center>
                
                    <center>
                      <i class="far fa-calendar-alt"></i> 
                      <%= item.date.toGMTString().slice(0,16) %> 
                    </center>
                    <br>
                
                    <% if(item.description.length>200){%>
                    <p ><%= item.description.slice(0,197)+"..." %></p>
                    <% }else{ %>
                    <p><%= item.description + " ".repeat(200-item.description.length) %></p>
                    <% } %>
    
                    <hr><br>
                    <center >
                      <h4 ><a  href="/news/<%= item._id %> "><i class="fas fa-info-circle"></i> More Info</a></h4>
                    </center>
                
                  </div>
                </div>
            <% }); %>
    
            </div>
    
          </div>
        </section>
    

  </main><!-- End #main -->


  <%- include ('../partials/footer'); -%>

</body>

</html>