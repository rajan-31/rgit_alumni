<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>News Info</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="../assets/img/favicon.png" rel="icon">
  <link href="../assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Jost:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../assets/vendor/icofont/icofont.min.css" rel="stylesheet">
  <link href="../assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="../assets/vendor/venobox/venobox.css" rel="stylesheet">
  <link href="../assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
  <link href="../assets/vendor/aos/aos.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="../assets/css/style.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top header-inner-pages">
    <div class="container d-flex align-items-center">
  
      <h1 class="align-items-center mr-auto"><a href="#"><img id="main_logo" src="../assets/img/logo.png" alt="APSIT" height="100px"></a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="../assets/img/logo.png" alt="" class="img-fluid"></a>-->
  
      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="/">Home</a></li>
          <li class="active"><a href="/news">News</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/contribute">Contribute</a></li>
          <li><a href="/communicate">Communicate</a></li>
  
          <% if(!loggedInUser){ %>
          <li><a href="/signup">Sign UP</a></li>
          <li><a href="/login">Login</a></li>
          <% } else if(loggedInUser.role=="admin"){ %>
          <li><a href="/admin">Admin Panel</a></li>
          <li><a href="/logout">Logout</a></li>
          <% } else { %>
          <li class="drop-down"><a href="#"><%= loggedInUser.firstName || loggedInUser.username %>&nbsp;</a>
            <ul>
              <li><a href="/profile"><i class="icofont-ui-user pr-1"></i>Profile</a></li>
              <li><a href="/logout"><i class="icofont-sign-out pr-1"></i>Logout</a></li>
            </ul>
          </li>
          <% } %>
        </ul>
      </nav><!-- .nav-menu -->
  
  
  
    </div>
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs"><br><br><br>
      <div class="container">

        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/news">News</a></li>
          <li>News Details</li>
        </ol>
        <h2>News Details</h2>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container">

        <div class="portfolio-details-container">

          <div class="owl-carousel portfolio-details-carousel">
            <% news.images.forEach(function(item){ %>

              <img src="data:image/<%=item.contentType%>;base64, 
              <%=item.data.toString('base64')%>">
              
              <% }) %>

          </div>

          <div class="portfolio-info">
            <h3>News information</h3>
            <ul>
              <!-- <li><strong>Branch</strong>: All</li> -->
              <li><strong>Date</strong>: <%= news.date.toGMTString().slice(0,16) %></li>
            </ul>
          </div>

        </div>

        <div class="portfolio-description">
          <h2><%= news.title %></h2>
          <p>
            <%= news.description %>
          </p>
        </div>

      </div>
    </section><!-- End Portfolio Details Section -->

  </main><!-- End #main -->


  <%- include ('../partials/footer'); -%>

</body>

</html>