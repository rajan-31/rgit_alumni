<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Info</title>
    <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../vendor/chosen/chosen.min.css">

    <style>
        #navbar {
            position: fixed;
            /* Make it stick/fixed */
            top: 0;
            /* Stay on top */
            width: 100%;
            /* Full width */
            transition: top 0.5s;
            /* Transition effect when sliding down (and up) */
        }
    </style>
</head>
<body>
    <nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/"><img src="../assets/img/logo.png" height="50"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/news">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contribute">Contribute</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/communicate">Communicate</a>
                    </li>
    
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
    
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mb-5" style="margin-top: 5rem;">

        <h1>Profile</h1>

        <!-- profile Image -->
        <div>
            <% if( profileImage.data ) { %>
            <img style="border-radius: 20px"
                src="data:image/<%=profileImage.contentType%>;base64, <%=profileImage.data.toString('base64')%>" width="300"
                height="200">
            <% } else { %>
            <img style="border-radius: 20px; margin: 0px 50px 0px;" src="../images/icons/profile-image-placeholder.png" width="200"
                height="200">
            <% } %>
        </div>

            <!-- other data -->
            <h4><%= firstName  %> <%= lastName  %></h4>

            <p>User Type: <%= userType  %></p>
            
            <p>Gender: <%= profile.gender  %></p>
                        
            <p>Bio: <%= profile.bio  %></p>
            
            <p>DOB: <% if(profile.dob && profile.dob!="") { %><%= profile.dob.toLocaleDateString()  %><% } %></p>
            
            <h5>Contact Details</h5>
            <p>Contact Number: <%= profile.contact.mobile  %></p>
            <p>Email: <%= profile.contact.email  %></p>
            
            <h5>Address Information</h5>
            <strong><p>Home Address</p></strong>
            <p><%= profile.address.homeAddress.addressLine1 %></p>
            <p><%= profile.address.homeAddress.country %></p>
            <p><%= profile.address.homeAddress.zipcode %></p>

            <%if(userType && userType=="alumni"){%>
            <strong><p>Business Address</p></strong>
            <p><%= profile.address.businessAddress.addressLine1 %></p>
            <p><%= profile.address.businessAddress.country %></p>
            <p><%= profile.address.businessAddress.zipcode %></p>
            <%}%>

            <h5>Social Media</h5>
            <p>Linkedin Profile: 
                <% if(profile.social_media.linkedin){ %>
                    <a href="https://www.linkedin.com/in/<%= profile.social_media.linkedin  %>" target="_blank">https://www.linkedin.com/in/<%= profile.social_media.linkedin  %>
                    </a>
                    <%}%>
                </p>
                <p>Instagram Profile: 
                    <% if(profile.social_media.instagram){ %>
                        <a href="https://www.instagram.com/<%= profile.social_media.instagram %>" target="_blank">https://www.instagram.com/<%= profile.social_media.instagram %></a>
                        <%}%>
                    </p>
                    <p>Website: 
                        <a href="<%= profile.social_media.website  %>" target="_blank"><%= profile.social_media.website  %></a>
                    </p>
                
            <h5>Professionl Information</h5>
            <p>Year Of Admission: <%= profile.yearOfAdmission  %></p>
            <p>Year Of Graduation: <%= profile.yearOfGraduation  %></p>
            <p>Branch: <%= profile.branch  %></p>
            
            <%if(userType && userType=="alumni"){%>
            <% if(Object.entries(profile.workExperience.employer).length>0) { %>
            <p> <strong>Work Experience</strong></p>
                <% for(let j=0; j< Object.entries(profile.workExperience.employer).length; j++){ %>

                <div class="bg-secondary my-3 px-2 py-2">
                <div class="row">
                    <div class="form-group col-6"><p>Employer: <%= profile.workExperience.employer[j] %> </p></div>
                    <div class="form-group col-3"><p>Job Title: <%= profile.workExperience.jobTitle[j] %> </p></div>
                    <div class="form-group col-3"><p>Job Domain: <%= profile.workExperience.jobDomain[j] %> </p></div>
                    <div class="form-group col-6"><p>Job From: <%= profile.workExperience.jobFrom[j] %> </p></div>
                    <div class="form-group col-6"><p>Job Till: <%= profile.workExperience.jobTill[j] %> </p></div>
                </div>
                </div>

                <% } %>
            <% } %>
            <% } %>

            <p> <strong>Skills</strong></p>
            <ul>
                <% profile.skills.forEach(skill => { %>
                <li><%= skill  %></li>
                <% }) %>
            </ul>
                    
        </div>
                
    <script src="../vendor/jquery/jquery-3.2.1.min.js"></script>
                
    <!-- to select multiple options from dropdown -->
    <script src="../vendor/chosen/chosen.jquery.js"></script>
    <script src="../javascripts/main.js"></script>
    <script src="../vendor/bootstrap/js/popper.min.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <script>
        var prevScrollpos = window.pageYOffset;
        window.onscroll = function () {
            var currentScrollPos = window.pageYOffset;
            if (prevScrollpos > currentScrollPos) {
                document.getElementById("navbar").style.top = "0";
            } else {
                document.getElementById("navbar").style.top = "-90px";
            }
            prevScrollpos = currentScrollPos;
        }
    </script>
</body>
</html>