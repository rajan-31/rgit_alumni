<!DOCTYPE html>
<html lang="en">

<head>
    <title>SignUp | APSIT Alumini</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/logo.png" rel="apple-touch-icon">
    
	<link rel="stylesheet" type="text/css" href="assets/vendor/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" crossorigin="anonymous" />
	<link rel="stylesheet" type="text/css" href="assets/css/util.css">
	<link rel="stylesheet" type="text/css" href="assets/css/main.css">

    <!-- Jquery with fallback -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <script>
     window.jQuery || document.write('<script src="assets/vendor/jquery.min.js"><\/script>');
  </script>
</head>

<body>
    <!-- start flash message -->
    <% if(successMessage && successMessage.length>0 ){ %>
    <div class="alert alert-success mb-0" role="alert">
        <div class="container text-center">
            <%= successMessage %>
        </div>
    </div>
    <% } else if(errorMessage && errorMessage.length>0 ){ %>
    <div class="alert alert-danger mb-0" role="alert">
        <div class="container text-center">
            <%= errorMessage %>
        </div>
    </div>
    <% } %>
    <!-- end flash message -->

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-10 p-b-30">

                <span class="login100-form-title p-b-40" style="color: #37517E;">
                    Welcome to APSIT <br>Alumini Portal
                </span>

                <span class="login100-form-title p-b-40">
                    SignUp
                </span>

                <form action="/signup" method="POST" id="signUpForm" class="login100-form validate-form">
                    <div class="row">
                        <div class="wrap-input100 m-b-10 col-lg-6">
                            <input class="input100" type="text" name="firstName" placeholder="First Name" required="required" pattern="[a-zA-z]{1,}" maxlength="20" 
                            oninvalid="this.setCustomValidity('Not Valid First Name')"
                            onchange="try{setCustomValidity('')}catch(e){}"
                            oninput="setCustomValidity(' ')" >
                            <span class="focus-input100"></span>
                        </div>
    
                        <div class="wrap-input100 m-b-10 col-lg-6">
                            <input class="input100" type="text" name="lastName" placeholder="Last Name" required="required" pattern="[a-zA-z]{1,}" maxlength="20"
                            oninvalid="this.setCustomValidity('Not Valid Last Name')"
                            onchange="try{setCustomValidity('')}catch(e){}"
                            oninput="setCustomValidity(' ')">
                            <span class="focus-input100"></span>
                        </div>

                    </div>

                    <div class="row">
                        <div class="wrap-input100 validate-input m-b-15 col-12" data-validate="Please enter email: ex@abc.xyz">
                            <input class="input100" type="email" name="username" placeholder="Email" required="required">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-0 col-12" data-validate="Please enter password">
                            <span class="btn-show-pass">
                                <i class="fas fa-eye"></i>
                            </span>
                            <input class="input100" type="password" name="password" placeholder="Password" id="password" minlength="6" maxlength="20" required="required">
                            <span class="focus-input100"></span>
                        </div>
    
                        <div id="passwordLengthInfo" class="form-text text-muted text-center m-b-10 col-12">
                            <i class="fas fa-exclamation-circle" aria-hidden="true"></i> <small>Password length atleast 6
                                characters.</small>
                        </div>


                        <div class="wrap-input100 validate-input col-12" data-validate="Please enter password">
                            <span class="btn-show-pass">
                                <i class="fas fa-eye"></i>
                            </span>
                            <input class="input100" type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword" minlength="6" maxlength="20" required="required">
                            <span class="focus-input100"></span>
                        </div>
                    </div>

                    
                    <div id="passwordInfo" class="form-text text-muted text-center m-b-20"></div>

                    <div class="row">
                        <div class="col-12 px-0 wrap-input100 m-b-20">
                                <!-- <label for="userType">Who are you?</label> -->
                                <select name="userType" class="input100" required="required" style="border: none;">
                                    <option class="wrap-input100" value="" aria-placeholder="aaaaaaa">Select User Type</option>
                                    <option class="wrap-input100" value="alumni">Alumni</option>
                                    <option class="wrap-input100" value="student">Student</option>
                                </select>
                            </div>
                    </div>
                    

                    <!-- <br> -->
                </form>
                <div class="row">
                    <div class="container-login100-form-btn col-6">
                        <button class="login100-form-btn" form="signUpForm">
                            <i class="fas fa-user-plus p-r-5"></i>
                            SignUp
                        </button>
                    </div>
                    <div class="container-login100-form-btn col-6">
                        <form action="/oauth/google">
                            <button class="login100-form-btn google">
                                <div>
                                    <i class="fab fa-google p-r-5"></i>
                                </div>
                                Google SignUp
                            </button>
                        </form>
                    </div>
                </div>

                <div class="flex-col-c p-t-30">
					<span class="txt2 p-b-10">
						Already have an account?
					</span>

					<a href="/login" class="txt3 bo1 hov1">
						Login now
					</a>
				</div>

            </div>
        </div>
    </div>


	<script src="assets/vendor/bootstrap.bundle.min.js"></script>
	<script src="assets/js/mainAuth.js"></script>

</body>

</html>