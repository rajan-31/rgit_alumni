<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login | Alumini</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="stylesheets/util.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/main.css">
    <!--===============================================================================================-->
</head>

<body>
    <!-- start flash message -->
    <% if(successMessage && successMessage.length>0 ){ %>
    <div class="alert alert-success mb-0" role="alert">
        <div class="container text-center">
            <%= successMessage %>
        </div>
    </div>
    <% } else if(errorMessage && errorMessage.length>0 ){ %>
    <div class="alert alert-danger mb-0" role="alert">
        <div class="container text-center">
            <%= errorMessage %>
        </div>
    </div>
    <% } %>
    <!-- end flash message -->

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-10 p-b-30">

                <span class="login100-form-title p-b-40" style="color: #37517E;">
                    Welcome to APSIT <br>Alumini Portal
                </span>

                <span class="login100-form-title p-b-40">
                    SignUp
                </span>

                <form action="/signup" method="POST" id="signUpForm" class="login100-form validate-form">
                    <div class="row">
                        <div class="wrap-input100 m-b-10 col-lg-6">
                            <input class="input100" type="text" name="firstName" placeholder="First Name" required="required">
                            <span class="focus-input100"></span>
                        </div>
    
                        <div class="wrap-input100 m-b-10 col-lg-6">
                            <input class="input100" type="text" name="lastName" placeholder="Last Name" required="required">
                            <span class="focus-input100"></span>
                        </div>

                    </div>

                    <div class="row">
                        <div class="wrap-input100 validate-input m-b-15 col-12" data-validate="Please enter email: ex@abc.xyz">
                            <input class="input100" type="email" name="username" placeholder="Email" required="required">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-16 col-12" data-validate="Please enter password">
                            <span class="btn-show-pass">
                                <i class="fa fa fa-eye"></i>
                            </span>
                            <input class="input100" type="password" name="password" placeholder="Password" id="password" minlength="6" required="required">
                            <span class="focus-input100"></span>
                        </div>
    
                        <div class="wrap-input100 validate-input col-12" data-validate="Please enter password">
                            <span class="btn-show-pass">
                                <i class="fa fa fa-eye"></i>
                            </span>
                            <input class="input100" type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword" minlength="6" required="required">
                            <span class="focus-input100"></span>
                        </div>
                    </div>

                    
                    <div id="passwordInfo" class="form-text text-muted text-center m-b-20"></div>

                    <div class="wrap-input100">
                        <!-- <label for="userType">Who are you?</label> -->
                        <select name="userType" class="input100 m-b-20" required="required">
                            <option class="wrap-input100" value="">Select User Type</option>
                            <option class="wrap-input100" value="alumni">Alumni</option>
                            <option class="wrap-input100" value="student">Student</option>
                        </select>
                    </div>

                    
                    <!-- <br> -->
                </form>
                <div class="row">
                    <div class="container-login100-form-btn col-6">
                        <button class="login100-form-btn" form="signUpForm">
                            SignUp
                        </button>
                    </div>
                    <div class="container-login100-form-btn col-6">
                        <form action="/oauth/google">
                            <button class="login100-form-btn google">
                                <div>
                                    <i class="fa fa-google p-r-5"></i>
                                </div>
                                Google SignUp
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="../vendor/chosen/chosen.jquery.js"></script>

    <script src="javascripts/main.js"></script>

</body>

</html>