            </nav>
    <!-- /.sidebar-menu -->
        </div>
    <!-- /.sidebar -->
        </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper"  style="margin-top: 57px;" style="margin-top: 57px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
    <div class="col-sm-6">
      <h1 class="m-0 text-dark">Dashboard</h1>
    </div><!-- /.col -->
    <div class="col-sm-6">
      <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active">Dashboard</li>
      </ol>
    </div><!-- /.col -->
    </div><!-- /.row -->
    </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">

    <!-- start flash message -->
    <div id="flashAlert" class="container-fluid">
    <div class="row">
    <div class="col-lg-12 col-12">
      <% if(successMessage && successMessage.length>0 ){ %>
        <div class="alert alert-success text-center" role="alert">
          <%= successMessage %>
        </div>
      <%}%>
      <% if(errorMessage && errorMessage.length>0 ){ %>
        <div class="alert alert-danger text-center" role="alert">
          <%= errorMessage %>
        </div>
      <% } %>
    </div>
    </div>
    </div>
    <!-- end flash message -->


    <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">

    <!-- ./col -->
    <div class="col-lg-6 col-12">
      <!-- small box -->
      <div class="small-box bg-warning">

        <div class="inner">
          <h3><%= alumniCount %></h3>
          <h3>Alumni Count</h3>
        </div>

        <div class="icon">
          <i class="ion ion-person-add"></i>
        </div>
        <a href="/admin/alumnilist" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
      </div>
    </div>

    <!-- ./col -->
    <div class="col-lg-6 col-12">
      <!-- small box -->
      <div class="small-box bg-warning">
        <div class="inner">
          <h3> <%= studentCount %> </h3>

          <h3>Student Count</h3>
        </div>
        <div class="icon">
          <i class="ion ion-person-add"></i>
        </div>
        <a href="/admin/studentlist" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
      </div>
    </div>
    <!-- ./col -->
    </div>
    <!-- /.row -->


    <!-- Main row -->
    <div class="row">
    <!-- Left col -->
    <section class="col-lg-12"><br>

    <div>
    <center><h1 class="m-0 text-dark">Edit Home Page</h1></center><br>
    </div>

    <div>
    <form action="/admin/externalData" method="POST">
        <div class="row">

            <div class="col-12">
              <div class="form-group">
                <label for="">Youtube Video URL</label>
                <input type="text" name="youtubeURL" value="<%= dataFromFile.youtubeURL %>" class="form-control" required="required">
              </div>
            </div>

          </div>

        <div class="row">

            <div class="col-6 col-lg-3">
              <div class="form-group">
                <label for="">Student Count</label>
                <input type="number" min="0" max="" name="students" value="<%= dataFromFile.students %>" class="form-control"
                  required="required">
              </div>
            </div>

            <div class="col-6 col-lg-3">
              <div class="form-group">
                  <label for="">Student Progress (%)</label>
                  <input type="number" min="0" max="100" name="studentsProgress" value="<%= dataFromFile.studentsProgress %>"
                    class="form-control" required="required">
              </div>
            </div>

          

            <div class="col-6 col-lg-3">
              <div class="form-group">
                <label for="">Alumni Count</label>
                <input type="number" min="0" max="" name="alumni" value="<%= dataFromFile.alumni %>" class="form-control"
                  required="required">
              </div>
            </div>

            <div class="col-6 col-lg-3">
              <div class="form-group">
                  <label for="">Alumni Progress (%)</label>
                  <input type="number" min="0" max="100" name="alumniProgress" value="<%= dataFromFile.alumniProgress %>"
                    class="form-control" required="required">
              </div>
            </div>

        </div>

          <!-- /.card-body -->

        <div>
          <button type="submit" class="btn btn-block btn-primary btn-lg"><i class="fas fa-upload"></i> Update</button><br>
        </div>
    </form>

    </div>
    </section>

    
    <!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->

    <!-- right col -->
    </div>
    <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
<%- include ('../partials/adminFooter'); -%>
</body>
</html>
